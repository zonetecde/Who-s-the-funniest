<UserControl x:Class="Who_s_the_funniest.uc.UC_PlayerInGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Who_s_the_funniest.uc"
             mc:Ignorable="d" 
              Height="60" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="White" Offset="0.216"/>
                <GradientStop Color="#FFE2E6E1" Offset="0.657"/>
                <GradientStop Color="#FFD1D6D0" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Label x:Name="Label_nom_personne" Content="_Nom_de_la_personne" VerticalContentAlignment="Center" Padding="20,5,5,5" FontSize="20"/>
        <Image x:Name="Image_Owner" Source="/uc/crown.png" HorizontalAlignment="Right" Margin="0,0,20,0" Width="40"/>
        <Border BorderBrush="Black" BorderThickness="1,1,1,1"/>
    </Grid>
</UserControl>
